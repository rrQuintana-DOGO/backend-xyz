{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@plugins/*": ["src/plugins/*"],
      "@domain/*": ["src/domain/*"],
      "@infraestructure/*": ["src/infraestructure/*"],
      "@presentation/*": ["src/presentation/*"],
      "@presentation": ["src/presentation"],
    },
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "src",                                   
    "outDir": "dist/",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                               
  }
}
