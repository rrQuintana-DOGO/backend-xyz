{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@plugins/*": ["src/plugins/*"],
      "@config/*": ["src/config/*"],
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@dtos/*": ["src/domain/dtos/*"],
      "@entities/*": ["src/domain/entities/*"],
      "@repository/*": ["src/domain/repository/*"],
      "@infraestructure/*": ["src/infraestructure/*"],
      "@presentation/*": ["src/presentation/*"],
    },
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "src",                                   
    "outDir": "dist/",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                               
  }
}
