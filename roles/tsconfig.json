{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@plugins/*": ["src/plugins/*"],
      "@config/*": ["src/config/*"],
      "@dtos/*": ["src/domain/dtos/*"],
      "@entities/*": ["src/domain/entities/*"],
    },
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "src",                                   
    "outDir": "dist/",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                               
  }
}
